<UserControl x:Class="TakeABreak.ToggleSwitchButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TakeABreak"
             mc:Ignorable="d" 
             d:DesignWidth="284.5" Height="163.667">
    <Viewbox HorizontalAlignment="Center" VerticalAlignment="Center">
        <Grid Height="58" Width="100">
            <Rectangle x:Name="rectBack" Width="96" RadiusX="29" RadiusY="29" Stroke="#FFA0A0A0" Height="56" Fill="#FFD1D1D1" MouseLeftButtonDown="rectBack_MouseLeftButtonDown" StrokeThickness="2"/>
            <Ellipse x:Name="ellDot" Width="50" Height="50" HorizontalAlignment="Center" VerticalAlignment="Center" MouseLeftButtonDown="ellDot_MouseLeftButtonDown" Fill="White" Stroke="#FFA0A0A0"/>
        </Grid>
    </Viewbox>
</UserControl>
